<div class="min-h-screen bg-gray-100 px-4 py-8 flex items-center justify-center">
    <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg p-8">
      
      <h2 class="text-2xl font-bold text-blue-600 mb-6">Edit Profile</h2>
  
      <form action="/profile/edit" method="POST" class="space-y-5">
  
        <div>
          <label for="college" class="block mb-1 font-medium text-gray-700">College</label>
          <input type="text" id="college" name="college" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="<%= user.college || '' %>">
        </div>
  
        <div>
          <label for="major" class="block mb-1 font-medium text-gray-700">Major</label>
          <input type="text" id="major" name="major" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="<%= user.major || '' %>">
        </div>
  
        <div>
          <label for="year" class="block mb-1 font-medium text-gray-700">Year</label>
          <select id="year" name="year" class="w-full px-4 py-2 border border-gray-300 rounded-lg">
            <option value="">Select year</option>
            <option value="freshman" <%= user.year === 'freshman' ? 'selected' : '' %>>Freshman</option>
            <option value="sophomore" <%= user.year === 'sophomore' ? 'selected' : '' %>>Sophomore</option>
            <option value="junior" <%= user.year === 'junior' ? 'selected' : '' %>>Junior</option>
            <option value="senior" <%= user.year === 'senior' ? 'selected' : '' %>>Senior</option>
            <option value="graduate" <%= user.year === 'graduate' ? 'selected' : '' %>>Graduate</option>
          </select>
        </div>
  
        <div>
          <label for="studentId" class="block mb-1 font-medium text-gray-700">Student ID</label>
          <input type="text" id="studentId" name="studentId" class="w-full px-4 py-2 border border-gray-300 rounded-lg" value="<%= user.studentId || '' %>">
        </div>
  
        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-lg font-semibold hover:bg-blue-700 transition">
          Save Changes
        </button>
      </form>
    </div>
  </div>
  