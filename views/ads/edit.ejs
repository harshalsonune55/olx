

<h1 class="text-3xl font-semibold mb-6">Edit Ad</h1>

<form action="/ads/<%= ad._id %>/edit" method="POST" class="bg-white p-6 rounded shadow space-y-4 max-w-2xl">
  <div>
    <label class="block mb-1 font-medium">Title</label>
    <input type="text" name="title" required value="<%= ad.title %>" class="w-full border px-3 py-2 rounded" />
  </div>

  <div>
    <label class="block mb-1 font-medium">Description</label>
    <textarea name="description" rows="4" required class="w-full border px-3 py-2 rounded"><%= ad.description %></textarea>
  </div>

  <div>
    <label class="block mb-1 font-medium">Price</label>
    <input type="number" name="price" required value="<%= ad.price %>" class="w-full border px-3 py-2 rounded" />
  </div>

  <div>
    <label class="block mb-1 font-medium">Image URL</label>
    <input type="url" name="image" required value="<%= ad.image %>" class="w-full border px-3 py-2 rounded" />
  </div>

  <div class="flex gap-4">
    <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
      Update Ad
    </button>
    <a href="/ads/<%= ad._id %>" class="text-gray-600 hover:underline mt-2">Cancel</a>
  </div>
</form>
