<div class="max-w-4xl mx-auto bg-white rounded-lg shadow p-6">
  <!-- Image -->
  <img src="<%= ad.image %>" alt="<%= ad.title %>" class="w-full h-96 object-cover rounded-md mb-6" />

  <!-- Title & Description -->
  <h1 class="text-2xl font-bold mb-2"><%= ad.title %></h1>
  <p class="text-gray-600 mb-4"><%= ad.description %></p>

  <!-- Price & Rating -->
  <div class="flex items-center justify-between mb-6">
    <span class="text-green-600 text-xl font-semibold">₹<%= ad.price %></span>
    <span class="text-yellow-500 text-sm">★ 4.9</span>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-wrap gap-4 items-center">
    <form action="/cart/<%= ad._id %>" method="POST">
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
        Add to Cart
      </button>
    </form>

    <form action="/orders/<%= ad._id %>" method="POST">
      <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition">
        Buy Now
      </button>
    </form>

    <% if (
  currentUser &&
  ad.user &&
  currentUser._id.toString() === ad.user.toString()
) { %>

      <a href="/ads/<%= ad._id %>/edit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600 transition">
        Edit
      </a>

      <form action="/ads/<%= ad._id %>/delete" method="POST" onsubmit="return confirm('Are you sure?')">
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition">
          Delete
        </button>
      </form>
    <% } %>
  </div>

  <!-- Back Link -->
  <a href="/" class="inline-block mt-6 text-blue-600 hover:underline">← Back to Listings</a>
</div>
